{
  "name": "mindbridge-frontend",
  "version": "1.0.0",
  "description": "Frontend build tools for MindBridge mental wellness platform",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./static/src/input.css -o ./static/dist/styles.css --minify",
    "build:js": "esbuild static/src/main.js --bundle --outfile=static/dist/main.js --minify",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "tailwindcss -i ./static/src/input.css -o ./static/dist/styles.css --watch",
    "watch:js": "esbuild static/src/main.js --bundle --outfile=static/dist/main.js --watch",
    "dev": "npm run watch"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.19.8",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "chart.js": "^4.4.0"
  }
}
